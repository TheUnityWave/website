import React from 'react';

// JSON data containing services and subservices
const services = {
  // (Keep the JSON data as you have it)
};

const CleaningRentalEquipment = () => {
  // Find the service that matches "Cleaning Rental Equipment"
  const cleaningRentalService = services.services.find(service => service.id === 'cleaning-rental-equipment');
  
  // Ensure the videoSrc is correct and accessible
  const videoSrc = "https://github.com/TheUnityWave/website/raw/content/cleaning-equipment-demo.mp4";

  if (!cleaningRentalService) {
    return <p>Service not found.</p>;
  }

  return (
    <div id="cleaning-rental-equipment">
      <h2>{cleaningRentalService.name}</h2>
      
      <video controls width="100%">
        <source src={videoSrc} type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      {/* Render the subservices */}
      <div>
        {cleaningRentalService.subservices.map((subservice, index) => (
          <div key={subservice.name + index}> {/* Ensure the key is unique */}
            <h3>{subservice.name}</h3>
            <img src={subservice.image} alt={`${subservice.name} image`} style={{ width: '100%', maxWidth: '300px' }} />
            <p>{subservice.description}</p>
          </div>
        ))}
      </div>
    </div>
  );
};

export default CleaningRentalEquipment;
